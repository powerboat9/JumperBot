local grassSize = 3
local gaps = {}
local player = {5, 0}
local score = 0
local width, height = term.getSize()
local grass = term.isColor() and "5" or "0"
local playerColor = term.isColor() and "b" or "8"
local isJumping = false
local jumpHeight = 4
local speed = 0.2
local frequency = 0.2
local minSpace = 3
local maxGap = jumpHeight * 2 - 2
local genLeft = 0
local hasSpace = 0

local function wait()
    local t = os.startTimer(speed)
    local e = {false}
    while true do
        tE = {os.pullEvent()}
        if tE[1] == "timer" and tE[2] == t then
            break
        else
            e[1] = true
            e[#e + 1] = tE
        end
    end
    return e
end

local function die()
    sleep(speed * 5)
    gaps = {}
    player[2] = 0
    isJumping = false
    score = 0
end

term.setBackgroundColor(colors.black)
while true do
    term.clear()
    term.setCursorPos(1, 1)
    term.write(score .. ":" .. #gaps .. (gaps[1] and (":" .. (gaps[1].pos - player[1])) or ""))
    local str = ""
    for i = 1, width do
        str = str .. (gaps[i] and grass or "f")
    end
    for i = 1, grassSize do
        term.setCursorPos(1, height - (grassSize - 1) + (i - 1))
        term.blit((" "):rep(width), str, str)
    end
    term.setCursorPos(player[1], height - grassSize - player[2])
    term.blit(" ", playerColor, playerColor)
    local e = wait()
    if gaps[player[1]] then
        die()
    end
    if isJumping then
        if player[2] == jumpHeight then
            isJumping = false
        else
            player[2] = player[2] + 1
        end
    elseif player[2] > 0 then
        player[2] = player[2] - 1
    end
    if math.random() < frequency and genSpace == 0 and hasSpace >= minSpace then
        genSize = math.random(1, maxGap)
        hasSpace = 0
    end
    table.remove(gaps, 1)
    if genSize > 0 then
        gaps[width] = true
        genSize = genSize - 1
    else
        gaps[width] = false
        hasSpace = hasSpace + 1
    end
    if e[1] then
        for i = 2, #e do
            if e[i][1] == "key" and e[i][2] == keys.up then
                if player[2] == 0 then
                    isJumping = true
                end
            end
        end
    end
    score = score + 1
end
